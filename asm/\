#include "asm.h"

static size_t	get_label_position(t_bin *bin, char *name)
{
	t_label_list	*lst;

	lst = bin->labels;
	while (lst)
	{
		if (!ft_strcmp(lst->label->name, name))
			return (lst->label->position);
		lst = lst->next;
	}
	return (0);
}

static int		get_param_size(char op, char ocp, int arg_pos)
{
	char	ocp_val;

	if (arg_pos == 1)
		ocp_val = ocp >> 6;
	else if (arg_pos == 2)
		ocp_val = (ocp & 0x30) >> 4;
	else if (arg_pos == 3)
		ocp_val = (ocp & 0xC) >> 2;
	if (ocp_val == REG_CODE)
		return (T_REG);
	if (ocp_val == IND_CODE)
		return (T_IND);
	if (op == OP_STI || op == OP_FORK || op == OP_ZJPM
			|| op == OP_LDI || op == OP_LLDI)
		return (T_IND);
	return (T_DIR);
}

static void		get_offset(t_bin *bin, size_t l_pos, int arg_pos)
{
	char	op;

	op = bin->datas[l_pos];
	if (op == OP_LIVE || op == OP_ZJMP || op == OP_FORK || op == OP_LFORK)
		return (1);
}

static void		replace_label(t_label_replace *label, size_t rep_pos)
{
	size_t	pos;

	pos = label->position;
	pos += get_offset(bin, label->arg_pos);
}

void	replace_labels(t_bin *bin)
{
	t_label_replace_list	*lst;

	lst = bin->labels_replace;
	while (lst)
	{
		replace_label(lst->label, get_label_position(lst->label->name));
		lst = lst->next;
	}
}
